{
  "version": 2,
  "rewrites": [
    { "source": "/api/user/:path", "destination": "/api/handler?scope=user&path=:path" },
    { "source": "/api/admin/:path", "destination": "/api/handler?scope=admin&path=:path" }
  ],
  "functions": {
    "api/registro.js": { "maxDuration": 10 },
    "api/serve-image.js": { "maxDuration": 5 },
    "api/health.js": { "maxDuration": 5 },
    "api/handler.js": { "maxDuration": 15 }
  }
}
